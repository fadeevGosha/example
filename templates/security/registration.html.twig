{% extends 'base.html.twig' %}

{% block title %} Регистрация {% endblock %}

{% block body %}
    <div class="container">
        <div class="row">

            {% if error %}
                <div class="col-12">
                    <div class="alert alert-danger" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                </div>
            {% endif %}

            <div class="col-sm-12">
                    {{ form_start(registrationForm, {attr: {class: 'form-signin'}}) }}
                    <h1 class="h3 mb-3 font-weight-normal">Регистрация</h1>

                    {{ form_row(registrationForm.email, {label: 'Email пользователя', attr: {placeholder: 'Ваш email...'}, label_attr: {class: 'sr-only'}}) }}
                    {{ form_row(registrationForm.first_name, {label: 'Имя пользователя', attr: {placeholder: 'Ваше имя...'},  label_attr: {class: 'sr-only'}}) }}
                    {{ form_row(registrationForm.plainPassword, {label: 'Пароль', attr: {placeholder: 'Ваш пароль...'},  label_attr: {class: 'sr-only'}}) }}
                    {{ form_row(registrationForm.agreeTerms, {label: 'Политика конфиденциальности', }) }}

                    <button class="btn btn-lg btn-primary btn-block" type="submit">Зарегистрироваться</button>
                {{ form_end(registrationForm) }}
            </div>

        </div>
    </div>
{% endblock %}

