{% extends 'base_conent.html.twig' %}

{% block content %}
<div class="col-12">
    <div class="border flex-md-row mb-4 shadow-sm bg-white p-4">
        <form>
            <div class="form-group">
                <label>Количество параграфов</label>
                <input type="number" class="form-control" name="countParagraphs" value="{{ app.request.get('countParagraphs') }}">
            </div>
            <div class="form-group">
                <label>Вставляемое слово</label>
                <input type="text" class="form-control" name="word" value="{{ app.request.get('word') }}">
            </div>
            <div class="form-group">
                <label>Количество повторений вставляемого слова</label>
                <input type="number" class="form-control"  name="wordsCount" value="{{ app.request.get('wordsCount') }}">
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Сгенерировать текст</button>
        </form>
    </div>
    {% if text %}
        <div class="col-12 mt-2 mb-4">
            <p>{{ text|cached_markdown }}</p>
        </div>
    {% endif %}
</div>
{% endblock %}