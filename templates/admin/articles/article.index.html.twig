{% extends 'base_conent.html.twig' %}

{% block content_row_class %} {{ parent() }} p-4 {% endblock %}
{% block content_col_class %} {{ parent() }} p-0 {% endblock %}

{% block content %}
    <h1>Управление Статьями({{ pagination.totalItemCount }})</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Заголовок</th>
            <th>Автор</th>
            <th>Опубликована</th>
            <th>Редактировать</th>
        </tr>
        </thead>
        <tbody>
        {% for article in pagination %}
            <tr>
                <td>
                    <a href="{{ path('app_article_view', {'slug': article.slug}) }}">{{ article.title }}</a>
                </td>
                <td>{{ article.author.firstName }}</td>
                <td><i class="fas fa-{{ article.isPublished ? 'check' : 'times' }}"></i></td>
                <td> <a href="{{ path('app_admin_articles_edit', {'id': article.id}) }}"><i class="fas fa-pencil-alt"></i></a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Нет статей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(pagination) }}
{% endblock %}