{% extends 'base_conent.html.twig' %}

{% block content_row_class %} {{ parent() }} p-4 {% endblock %}
{% block content_col_class %} {{ parent() }} p-0 {% endblock %}

{% block content %}
    <h1>Управление комментариями({{ pagination.totalItemCount }})</h1>
    <form>
        <div class="input-group mb-3">
            <input type="text"
                   name="search"
                   class="form-control"
                   placeholder="Найти..."
                   value="{{ app.request.get('search') }}"
            >
            <div class="input-group-append">
                <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-search"></i></button>
            </div>
        </div>

        <div class="input-group mb-3">
            <div class="form-check">
                <input type="checkbox"
                       name="showDeleted"
                       class="form-check-input"
                        {% if app.request.query.has('showDeleted') %} checked {% endif %}
                >
                <label class="form-check-label">Показать удаленные</label>
            </div>
        </div>
    </form>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Статья</th>
            <th>Автор</th>
            <th>Комментарий</th>
            <th>Дата</th>
        </tr>
        </thead>
        <tbody>
        {% for comment in pagination %}
            <tr>
                <td>
                    <a href="{{ path('app_article_view', {'slug': comment.article.slug}) }}">{{ comment.article.title }}</a>
                </td>
                <td>{{ comment.authorName }}</td>
                <td style="width: 20%;">{{ comment.content|u.truncate(40, '...') }}</td>
                <td>{{ comment.createdAt|ago }} {% if comment.deletedAt %}DELETED{% endif %}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Нет комментариев</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(pagination) }}
{% endblock %}